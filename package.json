{
  "name": "nlcst-emoticon-modifier",
  "version": "1.1.4",
  "description": "nlcst utility to support emoticons in nlcst",
  "license": "MIT",
  "keywords": [
    "unist",
    "nlcst",
    "nlcst-util",
    "util",
    "utility",
    "emoticon",
    "emoticons"
  ],
  "repository": "syntax-tree/nlcst-emoticon-modifier",
  "bugs": "https://github.com/syntax-tree/nlcst-emoticon-modifier/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "emoticon": "^3.0.0",
    "nlcst-to-string": "^2.0.0",
    "unist-util-modify-children": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "is-hidden": "^1.0.0",
    "negate": "^1.0.0",
    "nyc": "^15.0.0",
    "prettier": "^1.0.0",
    "remark-cli": "^7.0.0",
    "remark-preset-wooorm": "^6.0.0",
    "retext-english": "^3.0.0",
    "retext-stringify": "^2.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.0.0",
    "unified": "^8.0.0",
    "xo": "^0.26.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify . -s nlcstEmoticonModifier -o nlcst-emoticon-modifier.js",
    "build-mangle": "browserify . -s nlcstEmoticonModifier -p tinyify -o nlcst-emoticon-modifier.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "unicorn/prefer-includes": "off",
      "guard-for-in": "off"
    },
    "ignore": [
      "nlcst-emoticon-modifier.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
